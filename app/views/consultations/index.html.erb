<p id="notice"><%= notice %></p>

<h1>Consultations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consultations.each do |consultation| %>
      <tr>
        <td><%= link_to consultation.patient.name, consultation.patient %></td>
        <td><%= link_to consultation.doctor.name, consultation.doctor %></td>
        <td><%= consultation.location %></td>
        <td><%= link_to 'Show', consultation %></td>
        <td><%= link_to 'Edit', edit_consultation_path(consultation) %></td>
        <td><%= link_to 'Destroy', consultation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Consultation', new_consultation_path %>
